global_defs {
	router_id {{ ansible_hostname }}
}

vrrp_instance VI_1 {
	state {{ otus_vrrp_role }}
	interface eth1
	virtual_router_id {{ vrrp_router_id }}
	priority 100
	advert_int 1
	authentication {
		auth_type PASS
		auth_pass {{ vrrp_password }}
	}
	virtual_ipaddress {
		{{ vrrp_vip_address }}
	}
}
